{
  "// based on": "https://github.com/tannerlinsley/react-query/blob/7a628d6497e6f71242f9af84de46997083f12549/package.json",
  "name": "@footron/controls-client",
  "version": "0.1.19",
  "author": "BYU PCCL",
  "license": "MIT",
  "main": "lib/index.js",
  "unpkg": "dist/controls-client.development.js",
  "types": "types/index.d.ts",
  "module": "es/index.js",
  "scripts": {
    "build:umd": "rimraf ./dist && cross-env NODE_ENV=production rollup -c",
    "build:es": "rimraf ./es && babel --extensions .ts,.tsx ./src --out-dir es",
    "build:commonjs": "rimraf ./lib && tsc && cross-env BABEL_ENV=commonjs babel --extensions .ts,.tsx ./src --out-dir lib",
    "build:types": "rimraf ./types && tsc --project ./tsconfig.types.json && replace 'import type' 'import' ./types -r --silent && replace 'export type' 'export' ./types -r --silent",
    "build": "yarn build:commonjs && yarn build:es && yarn build:umd && yarn build:types",
    "format": "yarn prettier --write",
    "husky-install": "husky install"
  },
  "files": [
    "dist",
    "es",
    "lib",
    "types"
  ],
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-const-enum": "^1.1.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "pinst": ">=2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "//": "See https://prettier.io/docs/en/precommit.html for more background",
  "lint-staged": {
    "*.{html,htm,js,jsx,ts,tsx,css,md}": "yarn prettier --max-warnings=0 --write .",
    "*.{js,jsx,ts,tsx,d.ts}": "yarn eslint --fix"
  }
}
